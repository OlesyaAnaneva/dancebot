# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID чата Ани (администратора)
ADMIN_CHAT_ID=778471230

# Режим бота (polling или webhook)
BOT_MODE=polling

# URL для вебхука (если используете)
WEBHOOK_URL=https://your-domain.com/bot


# ============================================
# SUPABASE DATABASE
# ============================================

# URL вашего Supabase проекта
SUPABASE_URL=https://your-project.supabase.co

# API ключ (anon public key)
SUPABASE_KEY=your_supabase_anon_key_here

# Service role key (для миграций, осторожно!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here


# ============================================
# APPLICATION SETTINGS
# ============================================

# Режим работы (development/production)
NODE_ENV=development

# Порт приложения (для вебхука)
PORT=3000

# Номер телефона Анны для оплаты
ANNA_PHONE_NUMBER=+79991234567

# Время бронирования индив слотов (часы)
SLOT_RESERVE_HOURS=12


# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Напоминание о занятии (часы до)
REMINDER_HOURS_BEFORE=24

# Автоматическая отмена неоплаченных (часы)
UNPAID_CANCEL_HOURS=24

# Интервал проверки уведомлений (минуты)
NOTIFICATION_CHECK_INTERVAL=5


# ============================================
# SECURITY
# ============================================

# Секретный ключ для подписи JWT
JWT_SECRET=your_jwt_secret_here

# Соль для хеширования
HASH_SALT=your_salt_here


# ============================================
# LOGGING
# ============================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Файл логов
LOG_FILE=logs/bot.log